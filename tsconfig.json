{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "strict": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "target": "es6",
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}